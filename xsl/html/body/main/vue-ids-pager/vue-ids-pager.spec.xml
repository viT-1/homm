<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="../spec.xsl" type="text/xsl"?>
<html>
	<head data-relpath-root="../../../../../">
		<title>HoMM: vue-ids-pager</title>
		<script src="vue-ids-pager.js"></script>
	</head>
	<body>
		<main>
			<vue-ids-pager v-bind="{ config: { ids: ids, n: pageNum, limit: 3 }}">
				<template v-slot="pager">
					<div>
						Page <button v-on="{ click: decr }" v-bind="{ disabled: pageNum == 0 }">Prev</button>
						<input type="number" v-model="pageNum" min="0" v-bind="{ max: pager.max }"/>
						<button	v-on="{ click: incr }" v-bind="{ disabled: pager.isLast }">Next</button>
						<p>Any {{pager.some}}</p>
						<p>Ids: <b>{{pager.currentIds}}</b> on page.</p>
					</div>
				</template>
			</vue-ids-pager>
		</main>
		<script>
			window.homm_ns.f.injectToVueConfig({
				methods: {
					incr: function() {
						this.pageNum++;
					},
					decr: function() {
						this.pageNum--;
					}
				}
			});
		</script>
		<script src="vue-ids-pager.spec.js"></script>
	</body>
</html>