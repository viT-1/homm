<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet href="../spec.xsl" type="text/xsl"?>
<html>
	<head data-relpath-root="../../../../../">
		<title>HoMM: vue-ids-pager</title>
		<script src="vue-ids-pager.js"></script>
	</head>
	<body>
		<main>
			<vue-ids-pager
				v-model="inputIndex"
				v-bind="{ ids: ids, limit: perPage }">
				<template v-slot="pager">
					<div>
						Page <button v-on="pager.prevEvents" v-bind="{ disabled: !pager.canPrevPg }">Prev</button>
						<input type="number" v-model.number="inputIndex" min="0" v-bind="{ max: pager.lastPgIndex }"/>
						<button	v-on="pager.nextEvents" v-bind="{ disabled: !pager.canNextPg }">Next</button>
						Per page: <input type="number" v-model.number="perPage" min="1"/>
						<p>Any {{pager.some}}</p>
						<p>Ids: <b>{{pager.currentIds}}</b> on page.</p>
					</div>
				</template>
			</vue-ids-pager>
		</main>
		<script>
			window.homm_ns.f.injectToVueConfig({
				data: function() {
					return {
						inputIndex: 0,
						ids:  ['A', 'Aff', 'C', 'Errs', 'oom', 'trl', 'just', 'some'],
						perPage: 3,
					}
				},
			});
			window.homm_ns.f.mount();
		</script>
		<script src="vue-ids-pager.vue.spec.js"></script>
		<script src="vue-ids-pager.methods.spec.js"></script>
	</body>
</html>